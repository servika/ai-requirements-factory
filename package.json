{
  "name": "ai-requirements-factory",
  "version": "1.0.0",
  "description": "AI Agent Wizard for Software Development Lifecycle - Transform system descriptions into comprehensive requirements, architecture, design, and testing documentation using Claude AI",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "scripts": {
    "cli": "node index.js",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "heroku-postbuild": "npm run install:all && npm run build:frontend",
    "start": "cd backend && npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/servika/ai-requirements-factory.git"
  },
  "bugs": {
    "url": "https://github.com/servika/ai-requirements-factory/issues"
  },
  "homepage": "https://github.com/servika/ai-requirements-factory#readme",
  "keywords": [
    "ai",
    "claude",
    "anthropic",
    "sdlc",
    "requirements",
    "architecture",
    "testing",
    "technical-design",
    "user-stories",
    "software-development",
    "code-generation",
    "documentation",
    "wizard"
  ],
  "author": "Servika",
  "license": "GPL-3.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "ora": "^8.0.1",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
